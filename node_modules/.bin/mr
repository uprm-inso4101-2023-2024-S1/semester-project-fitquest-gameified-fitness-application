#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  exec "$basedir/node" --harmony_weakmaps --harmony_proxies "$basedir/../mr/bin/mr" "$@"
else 
  exec node --harmony_weakmaps --harmony_proxies "$basedir/../mr/bin/mr" "$@"
fi
